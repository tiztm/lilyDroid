<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
    
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        style="@style/normalTab" >
                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent"  
    android:stretchColumns="0,1,2,3"     
>  
<TableRow>  
        <com.sonyericsson.zoom.ImageTextButton
            android:id="@+id/btnNew"
            style="@style/normalBtn"
           android:icon="@drawable/blognew"
            android:text="撰 写" >
        </com.sonyericsson.zoom.ImageTextButton>
        
       <com.sonyericsson.zoom.ImageTextButton
            android:id="@+id/btn100"
            style="@style/normalBtn"
           android:icon="@drawable/b100"
            android:text="私人区" >
        </com.sonyericsson.zoom.ImageTextButton>
        
        <com.sonyericsson.zoom.ImageTextButton
            android:id="@+id/btn101"
            style="@style/normalBtn"
           android:icon="@drawable/b101"
            android:text="公开区" >
        </com.sonyericsson.zoom.ImageTextButton>
        
        <com.sonyericsson.zoom.ImageTextButton
            android:id="@+id/btn102"
            style="@style/normalBtn"
           android:icon="@drawable/b102"
            android:text="好友区" >
        </com.sonyericsson.zoom.ImageTextButton>
            
            
        </TableRow>
        </TableLayout>
    </LinearLayout>
    

    <ListView
        android:id="@+id/topicList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
          android:layout_above="@id/linearLayout1"
        android:cacheColorHint="#00000000"
        android:divider="#D3D3D3"
        android:dividerHeight="1dp"
        android:scrollingCache="false"
        android:textColor="#000000" >
    </ListView>

</RelativeLayout>